{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@models/*": [
        "models/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
